NG = 3
REPR = REPR_FUNDAMENTAL
#REPR = REPR_SYMMETRIC
#REPR = REPR_ANTISYMMETRIC
#REPR = REPR_ADJOINT

#CHOICES ARE GAUGE_SUN AND GAUGE_SON
GAUGE_GROUP = GAUGE_SUN
#GAUGE_GROUP = GAUGE_SON

#T => PERIODIC, ANTIPERIODIC, OPEN, THETA
#X => PERIODIC, ANTIPERIODIC, THETA
#Y => PERIODIC, ANTIPERIODIC, THETA
#Z => PERIODIC, ANTIPERIODIC, THETA

#MACRO += -DBC_T_THETA
#MACRO += -DBC_T_PERIODIC
MACRO += -DBC_T_ANTIPERIODIC
#MACRO += -DBC_T_OPEN
MACRO += -DBC_X_PERIODIC
MACRO += -DBC_Y_PERIODIC
MACRO += -DBC_Z_PERIODIC

#MACRO += -DBC_XYZ_TWISTED

#MACRO += -DHALFBG_SF
#MACRO += -DBASIC_SF
#MACRO += -DROTATED_SF

#MACRO += -DWITH_SMEARING
#MACRO += -DWITH_CLOVER
#MACRO += -DWITH_EXPCLOVER
#MACRO += -DUPDATE_EO
#MACRO += -DWITH_MPI
MACRO += -DWITH_GPU
#MACRO += -DWITH_QUATERNIONS
MACRO += -DPURE_GAUGE_ANISOTROPY
MACRO += -DNDEBUG
#MACRO += -DDPHI_FLOAT
MACRO += -DCHECK_SPINOR_MATCHING
#MACRO += -DMPI_TIMING
MACRO += -DIO_FLUSH
#MACRO += -DUNROLL_GROUP_REPRESENT
#MACRO += -DTIMING
#MACRO += -DTIMING_WITH_BARRIERS
#MACRO += -DAMALLOC_MEASURE
#MACRO += -DMEASURE_FORCE
#MACRO += -DWITH_UNTESTED

#MACRO += -DWITH_NEW_GEOMETRY
MACRO += -DLOG_ALLPIDS

#Compiler
ifeq (,$(findstring -DWITH_GPU,$(MACRO))) #Compile CPU only
    CFLAGS = -Wall -Wshadow -std=c99 -O3 -g
    CC = gcc
    MPICC = mpicc
    LDFLAGS =
    INCLUDE =
else
    ifeq (,$(findstring -DWITH_MPI,$(MACRO))) # Compile on GPU but without MPI
        CC = nvcc
        CFLAGS = -O2 -Xcompiler '-std=c99 -fgcse-sm -fgcse-las -fgcse-after-reload'
        GPUFLAGS = --x cu -arch=sm_70 -Xptxas -v -Xptxas -dlcm=ca -dc
        LDFLAGS = -lcuda
    else # Compile on GPU with MPI
        CC = nvcc
        CFLAGS = -ccbin mpicc -Xcompiler '-std=c99 -fgcse-sm -fgcse-las -fgcse-after-reload'
        GPUFLAGS = --x cu -arch=sm_70 -Xptxas -v -Xptxas -dlcm=ca -dc
        LDFLAGS = -lcuda -lmpi
    endif
endif
